<!DOCTYPE html>
<html>
  <head>
    <title>Styleguide Design Elements</title>
    <link rel="stylesheet" type="text/css" href="/_styleguide/index.css">
    <script type="application/javascript" src="/_styleguide/index.js"></script>
  </head>
  <body class="StyleguidePage">
    <style type="text/css">
      {{#each designElements as |designElement|}}
        {{#each designElement.textStyles as |textStyle|}}
          .{{textStyle.name}} {
            {{textStyle.cssProps}}
          }
        {{/each}}
      {{/each}}
    </style>

    <h1 class="StyleguidePage-title">Design Elements</h1>
    {{#each designElements as |designElement|}}
      <section class="StyleguideSection">
        <h2 class="StyleguideSection-heading">Text Styles</h2>
        {{#each designElement.textStyles as |textStyle|}}
          <div class="StyleguideSection-item">
            <div class="StyleguideTextStyle">
              <div class="{{textStyle.name}}">{{textStyle.name}}</div>
              <div class="StyleguideTextStyle-code language-css">{{textStyle.cssProps}}<br/>{{textStyle.alignment}}</div>
            </div>
          </div>
        {{/each}}
      </section>
    {{/each}}

    <script type="application/javascript">
      document.querySelectorAll('.language-css').forEach((element) => {
        Prism.highlightElement(element)
      })
    </script>
  </body>
</html>