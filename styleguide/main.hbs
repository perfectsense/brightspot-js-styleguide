{{#> layout}}
    {{#*inline 'head'}}

    {{/inline}}

    {{#*inline 'content'}}
        <div class="sg-content-container">
            <div class="sg-file-list">
                {{#each files}}
                    <div class="sg-file">
                        <div class="sg-file-header">
                            <div class="sg-file-name">
                                <a href="{{url}}?full{{#if ../reqSeed}}&amp;seed={{../reqSeed}}{{/if}}{{#if ../selectedStyleSheet}}&amp;ss={{../selectedStyleSheet.idx}}{{/if}}" target="_top">{{name}}</a>
                            </div>

                            <form class="sg-file-form">
                                <input type="hidden" name="path" value="{{exampleFilePath}}">
                                <textarea class="code" name="data">{{exampleFileData}}</textarea>
                                <button>Save</button>
                            </form>
                        </div>

                        {{#with description}}
                            <div class="sg-file-description">{{{this}}}</div>
                        {{/with}}

                        {{#with options}}
                            <div class="sg-file-option-list">
                                Options:
                                <ul>
                                    {{#each this}}
                                        <li><span class="sg-design-item-type">{{@key}}</span> : {{this}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        {{/with}}

                        <div class="sg-file-body">
                            {{#with ../displayDevices}}
                                {{#each this}}
                                    <div class="sg-device">
                                        <div class="sg-device-name">
                                            <i class="{{device.icon}}"></i> {{device.name}}
                                        </div>

                                        <iframe
                                            style="height: {{device.height}}px; width: {{device.width}}px;"
                                            src="{{../../url}}?full&amp;device=true&amp;{{#if ../../../seed}}seed={{../../../seed}}{{/if}}{{#if ../../../selectedStyleSheet}}&amp;ss={{../../../selectedStyleSheet.idx}}{{/if}}">
                                        </iframe>
                                    </div>
                                {{/each}}

                            {{else}}
                                <iframe src="{{url}}?full{{#if ../reqSeed}}&amp;seed={{../reqSeed}}{{/if}}{{#if ../selectedStyleSheet}}&amp;ss={{../selectedStyleSheet.idx}}{{/if}}"></iframe>
                            {{/with}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/inline}}
{{/layout}}
